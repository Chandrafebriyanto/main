<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Ubah Contact</h2>

      <% if (typeof errors != 'undefined' && errors.length > 0) { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach((error) => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form action="/contact/update" method="post">
        <input
          type="hidden"
          name="oldName"
          value="<%= contact.name || contact.oldName %>"
        />
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            required
            value="<%= contact.name%>"
          />
        </div>

        <div class="mb-3">
          <label for="name" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= contact.email%>"
          />
        </div>

        <div class="mb-3">
          <label for="name" class="form-label">nomer</label>
          <input
            type="text"
            class="form-control"
            id="nomer"
            name="nomer"
            value="<%= contact.nomer%>"
          />
        </div>

        <button type="submit" class="btn btn-primary">Ubah</button>
      </form>
    </div>
  </div>
</div>
