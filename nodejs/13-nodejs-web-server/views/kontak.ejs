<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Kontak</h2>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomer Hp</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% contacts.forEach((contact, i) => { %>
          <tr>
            <th scope="row"> <%= i + 1 %></th>
            <td><%= contact.name %></td>
            <td><%= contact.nomer %></td>
            <td>
              <a href="/contact/<%= contact.name %>" class="btn btn-primary btn-sm badge rounded-pill"
                ><i class="bi bi-info-circle"></i>Detail</a
              >
            </td>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
