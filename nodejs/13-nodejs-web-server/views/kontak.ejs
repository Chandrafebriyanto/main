<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Kontak</h2>
      <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data Contact</a>
      
      <% if (msg.length > 0) { %>
      <div class="alert alert-success" role="alert">
        <i class="bi bi-check-circle"></i> <%= msg %>
      </div>
      <% } %>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomer Hp</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <div class="alert alert-danger fw-bold" role="aler">
            Data contact tidak ada
          </div>
          <% } %> <% contacts.forEach((contact, i) => { %>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= contact.name %></td>
            <td><%= contact.nomer %></td>
            <td>
              <a
                href="/contact/<%= contact.name %>/detail"
                class="btn btn-primary btn-sm badge rounded-pill"
                ><i class="bi bi-info-circle"></i>Detail</a
              >
            </td>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
